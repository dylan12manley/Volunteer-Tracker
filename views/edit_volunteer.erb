<h1>Update <%= @volunteer.name() %></h1>

<form action="/projects/:id/volunteers<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename volunteer</label>
  <input id="name" name="name" type="text">

  <label for="project_id">Reassign Project</label>
  <input id="project_input" name="project_id" type="text">

  <button type="submit"class="danger">Update Project</button>
</form>

<p><a href="/projects/:id/volunteers">Return to volunteer list</a></p>

<form action="/projects/:id/volunteers<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit"class="danger">Delete volunteer</button>
</form>
