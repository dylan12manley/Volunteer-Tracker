<h2>Volunteer: <%= @volunteer.name %></h2>
<h3>Project: <%= @project.title %></h3>

<form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="volunteer_name">Rename volunteer</label>
  <input id="name_input" name="volunteer_name" type="text">

  <button type="submit" class="danger">Update volunteer</button>
</form>

<form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="danger">Delete volunteer</button>
</form>

<a href="/projects/<%= @volunteer.project_id %>">Back to <%= @project.title %></a>
